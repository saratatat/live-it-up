  <div class="event-container">
  <div class="event-image">
    <% if @service.image.present? %>
      <img src="<%= @service.image %>" alt="<%= @service.title %>">
    <% else %>
      <img src="https://via.placeholder.com/800x400?text=No+Image+Available" alt="No image available">
    <% end %>
    <div class="event-content">
      <h1 class="event-title"><%= @service.title %></h1>
      <div class="event-details">
        <p class="event-description"><%= @service.description %></p>
        <div class="event-rating">
          <i class="fas fa-star"></i> <%= @service.rating %>
        </div>
        <div class="event-price">
          <strong>Price:</strong> <%= @service.price %> MAD
        </div>
      </div>
    </div>
  </div>
  <div class="event-actions">
    <%= link_to 'Book Now', root_path, class: 'btn-book' %>
